

<%= render "devise/shared/side_bar", book: @booknew, user: @user %>

		<div class="col-xs-9">
			<h1>Books</h1>
			<table class = "table table-hover">
				<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
				<th></th>
			</tr>
			<% @books.each do | book | %>
			<tr>
				<td>
					<%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
				</td>
				<td>
					<%= link_to book.title,book %>
				</td>
				<td><%= book.body %></td>
				<td><%= book.book_comments.count%>件コメントがあります。</td>
			</tr>
			<% end %>
		</table>

		</div>
	</div>
</div>