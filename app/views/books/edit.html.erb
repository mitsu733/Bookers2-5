
<div class = "books-edit-box">
<h1>Editing Book</h1>

<% if @book.errors.any? %>
 <ul>
    <li>error</li>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
 </ul>
 <% end %>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title, size: 80 %>
<h4>Opinion</h4>
<%= f.text_area :body, size:"79*10" %>
<%= f.submit "Update Book", class: "btn btn-primary btn-block" %>
<% end %>
<%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>
</div>
